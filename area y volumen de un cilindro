#include <stdio.h>

int main()
{
  int altura,radio;
  float volumen,area;
  printf("ingrese el radio de su cilindro:");
  scanf("%d",&radio);
  printf("ingrese la altura de su cilindro:");
  scanf("%d",&altura);
  /*formula de el area en un cilindro:π r² h*/
  volumen=(float) 3.14*(radio*radio)*altura;
  /* formula de area en un cilindro:2π r h + 2π r²*/
  area= (float) 2*3.14*radio*altura + 2*3.14*(radio*radio);
  printf("el volumen de su cilindro es:%f\n",volumen);
  printf("el area de su cilindro es:%f\n",area);
    return 0;
}
